  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng test",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng.js",
      "args": [
        "test",
        "--debug"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${webRoot}/node_modules/rxjs/**"
      ]
    }
  ]
}
